# Google ADK / Gemini API
GOOGLE_API_KEY=your_google_api_key_here

# Google Search (Custom Search JSON API)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_SEARCH_CSE_ID=your_custom_search_engine_id

# Web Search Provider (serper or google)
SEARCH_PROVIDER=serper
SERPER_API_KEY=your_serper_api_key

# Vector Database (Chroma)
CHROMA_PERSIST_DIRECTORY=./data/chroma
CHROMA_COLLECTION_NAME=knowledge_base

# LLM Settings
LLM_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.7

# Embedding Model
EMBEDDING_MODEL=models/text-embedding-004

# Rerank Model (optional)
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Guard Agent Settings
GUARD_ENABLED=true
GUARD_SENSITIVE_PATTERNS=

# Scheduler Settings (APScheduler)
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Taipei

# Logging
LOG_LEVEL=INFO

# Workflow Settings
RAG_PIPELINE_MODE=simple